<p id="notice"><%= notice %></p>
<div class="bg-white p-6 max-w-2xl mx-auto">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div class="sm:flex sm:space-x-5">
      <div class="mt-4 text-center sm:mt-0 sm:pt-1 sm:text-left">
        <p class="text-sm font-medium text-gray-600">Description<%= @note.description %></p>
        <p class="text-xl font-bold text-gray-900 sm:text-2xl">Goal Type<%= @note.goal_type %></p>
        <p class="text-sm font-medium text-gray-600">Total: <%= @note.total %>%</p>
        <p class="text-sm font-medium text-gray-600">Content: <%= @note.content || "none" %></p>
      </div>
    </div>
    <div class="mt-5 flex justify-center sm:mt-0">
      <%= link_to "Edit", edit_note_path(@note), class: "flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>
</div>

<div class="mt-10 divide-y divide-gray-200 max-w-2xl mx-auto">
  <div class="space-y-1">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Items
    </h3>
  </div>
  <div class="mt-6">
    <dl class="divide-y divide-gray-200">
      <% @note.items.each do |item| %>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-b sm:border-gray-200">
          <dt class="text-sm font-medium text-gray-500">
            <%= item.name %>
          </dt>
          <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="flex-grow tracking-largest"><%= item.evaluation %></span>
            <span class="ml-4 flex-shrink-0">errors: <%= item.errors_made  %></span>,
            <span class="ml-4 flex-shrink-0">prompting: <%= item.prompting %></span>,
            <span class="ml-4 flex-shrink-0">total: <%= item.total %></span>
          </dd>
        </div>
      <% end %>
    </dl>
  </div>
</div>

<div class="mx-auto max-w-2xl">
  <%= link_to 'Show', @note, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 mr-3" %> |
  <%= link_to 'Back', notes_path, class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-900 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
</div>
